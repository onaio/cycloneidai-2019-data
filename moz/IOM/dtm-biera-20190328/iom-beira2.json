            },
            {
                "value": {
                    "prop": "eviction_threat",
                    "mustache": "{{{eviction_threat}}}"
                },
                "alt": "Is there an eviction threat?",
                "useAltAsPrefix": true
            }
        ]
    },
    "aggregate": {
        "timeseries": {
            "field": "period"
        }
    },
    "popup": {
        "header": "{{site_name}}",
        "body": "<p style=text-align:left;><b>Site: </b>{{site_name }} ({{site_type}})<br><b>Total Individuals: </b>{{idps}}<br><b>Total Householdes: </b>{{familias}}<br><b>Site Classification: </b>{{site_class}}<br><b>Prevent Return: </b>{{prevent_return}}<p>"
    },
    "credit": "DTM - IOM Displacement Tracking Matrix"
}