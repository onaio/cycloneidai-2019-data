                },
                "alt": "Where do women give birth?",
                "useAltAsPrefix": true
            },
            {
                "value": {
                    "prop": "prop_school_u5",
                    "mustache": "{{{prop_school_u5}}}"
                },
                "alt": "What is the proportion of IDP children 3-5 years old attending school?",
                "useAltAsPrefix": true
            },
            {
                "value": {
                    "prop": "prop_school_6_12",
                    "mustache": "{{{prop_school_6_12}}}"
                },
                "alt": "What is the proportion of IDP children 6-12 years old attending school?",
                "useAltAsPrefix": true
            },
            {
                "value": {
                    "prop": "prop_school_13_17",
                    "mustache": "{{{prop_school_13_17}}}"
                },
                "alt": "What is the proportion of IDP children 13-17 years old attending school?",
                "useAltAsPrefix": true
            },
            {
                "value": {
                    "prop": "separated_toilet",
                    "mustache": "{{{separated_toilet}}}"
                },
                "alt": "How many of the latrines in the site are separated for males and females?",
                "useAltAsPrefix": true
            },
            {
                "value": {
                    "prop": "lock_toilet",
                    "mustache": "{{{lock_toilet}}}"
                },
                "alt": "How many toile latrines lock from the inside in the site?",
