{
    "label": "aerial assessment data",
    "source": {
        "type": "geojson",
        "featureType": "Point",
        "data": "data/moz_cycloneidai_aerialsurvey.csv",
        "minzoom": 2
    },
    "type": "symbol",
    "paint": {
        "text-color": "#0000ff",
        "text-halo-color": "#fff",
        "text-halo-width": 1.3,
        "text-halo-blur": 1
    },
    "layout": {
        "text-size": 10,
        "text-offset": [
            0,
            2
        ],
        "icon-image": {
            "property":"severity",
            "stops": [
              ["No / Minor", "circle-15-black"],
              ["Of concern", "circle-15-blue"],
              ["Serious", "circle-20-green"],
              ["Severe", "circle-20-blue"]
            ],
            "type": "categorical",
            "default": "circle-20-black"
          },
        "icon-allow-overlap": false,
        "icon-ignore-placement": false
    },
   
   "geo-columns": ["lon", "lat"],
   "popup": {
    "join": [
        "uniqueid",
        "uniqueid"
      ],
        "body": " <p style=text-align:left;> <b>Severity:</b> {{severity}}<br> <b> Estpop:</b> {{estpop}}<br><b> ponto de interesse:</b> {{pointofinterest}} <span style=float:right;>"
    }, 
    "visible": false,
    "credit": "Zoom to see more health facilities",
    "nondefault": true
}